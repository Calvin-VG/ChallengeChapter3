<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen4Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen 4"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_gobackscreen3"
        android:layout_marginBottom="100dp">

        <EditText
            android:id="@+id/et_masukkanusia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Usia"
            android:inputType="number"/>

        <EditText
            android:id="@+id/et_masukkanalamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Alamat" />

        <EditText
            android:id="@+id/et_masukkanpekerjaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Pekerjaan"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_gobackscreen3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back To Screen 3"
        android:layout_centerInParent="true"
        android:textAllCaps="false"/>

</RelativeLayout>